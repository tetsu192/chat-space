.side-bar
  .header
    %h3.header__name
      = current_user.name
    %ul.header__lists
      %li.list
        = link_to edit_user_path(current_user) do
          %i.fa.fa-cog.icon
      %li.list
        = link_to new_group_path do
          %i.fa.fa-pencil-square-o.icon
  .side-bar__groups
    = render partial: 'group', collection: @groups, as: 'group'
